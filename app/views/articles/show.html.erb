<div class="box-content">
  <h1><%= @article.title %></h1>
  <p>
    <%= @article.content %>
  </p>

  <div class="buttons">
    <span class="btn-home">
      <%= link_to "Home", articles_path %>
    </span>
    <span class="btn-home">
      <%= link_to "Edit", edit_article_path(@article) %>
    </span>
    <span class="btn-home">
      <%= link_to "Delete article",
          destroy_article_path(@article),
          method: :delete,
          data: { confirm: "Are you sure?"} %>
    </span>
  </div>


</div>
